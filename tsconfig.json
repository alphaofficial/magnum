{
	"compilerOptions": {
		"target": "ES2016",
		"module": "CommonJS",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"allowJs": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"baseUrl": "./src",
		"paths": {
			"@type": ["./src/types/index.ts"]
		},
		"skipLibCheck": true
	},
	"exclude": ["node_modules", "dist", "client"],
}